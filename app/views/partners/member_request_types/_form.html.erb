<div class="card">
  <div class="card-content">
    <%= simple_form_for([:partners, business_unit, request_type]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <div class="field is-grouped mt-1">
        <div class="control">
          <%= f.submit 'Save request type', class: 'button is-primary' %>
        </div>

        <% if request_type.persisted? %>
          <div class="control">
            <%= link_to 'Delete request type', [:partners, business_unit, request_type], method: :delete, data: { confirm: 'Are you sure you would like to delete this request type?' }, class: 'button is-fullwidth is-danger' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
