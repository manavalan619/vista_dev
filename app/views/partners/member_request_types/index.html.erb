<% title 'Request Types' %>
<% breadcrumb :partners_request_types, @business_unit %>
<% content_for(:hero_right) do %>
  <%= link_to 'New request type', [:new, :partners, @business_unit, :member_request_type], class: 'button is-primary' %>
  <%= link_to 'Edit business unit', [:edit, :partners, @business_unit], class: 'button is-primary' %>
<% end %>

<div class="card">
  <%= render 'header' %>

  <div class="card-table">
    <div class="content">
      <table class="table is-hoverable is-striped">
        <tbody>
          <%= render @request_types, business_unit: @business_unit %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @request_types %>
